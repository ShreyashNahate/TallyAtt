<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/teal_200"> <!-- Ripple Effect -->

    <item>
        <shape android:shape="rectangle">

            <!-- Button Gradient (Modern Look) -->
            <gradient
                android:angle="45"
                android:startColor="#5A418A"
                android:endColor="#5A418A" />

            <!-- Rounded Corners -->
            <corners android:radius="12dp"/>

            <!-- Button Elevation (Shadow) -->
            <padding android:left="8dp" android:top="4dp" android:right="8dp" android:bottom="8dp"/>

        </shape>
    </item>

</ripple>
